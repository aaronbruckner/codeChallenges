{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "ES6",
        "module": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "sourceRoot": "src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "build"
    },
    "exclude": [
        "./node_modules"
    ]
}